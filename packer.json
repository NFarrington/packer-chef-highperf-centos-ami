{
  "min_packer_version": "1.1.0",
  "variables": {},
  "builders": [
    {
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        },
        {
          "device_name": "/dev/sdc",
          "virtual_name": "ephemeral1"
        }
      ],
      "ami_description": "High Performance Image for CentOS 7, by Chef. Includes docker, ChefDK and latest security patches.  https://github.com/irvingpop/packer-chef-highperf-centos7-ami",
      "ami_groups": [
        "all"
      ],
      "ami_name": "chef-highperf-centos7-{{isotime \"200601021504\"}}",
      "ami_regions": [
        "us-west-1",
        "us-east-1",
        "us-east-2",
        "ca-central-1",
        "eu-west-1",
        "eu-west-2",
        "eu-west-3",
        "eu-central-1"
      ],
      "communicator": "ssh",
      "ebs_optimized": true,
      "ena_support": true,
      "sriov_support": true,
      "instance_type": "m4.large",
      "region": "us-west-2",
      "source_ami": "ami-cb1ec7b3",
      "ssh_pty": true,
      "ssh_username": "centos",
      "tags": {},
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "destination": "/tmp/install_prereqs.sh",
      "source": "scripts/install_prereqs.sh",
      "type": "file"
    },
    {
      "inline": [
        "sudo chmod 0755 /tmp/install_prereqs.sh",
        "sudo /tmp/install_prereqs.sh"
      ],
      "inline_shebang": "/bin/bash -e",
      "type": "shell"
    }
  ]
}
